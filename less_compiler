
read -p "Enter the name of your css file: " file


if [[ -f $file.less ]]
 then
  echo "You have all necessary less files."
 else
  echo "Creating less files..."
  touch $file.less
  touch new_$file.less		
fi 




for ((i=0; i<1000000000000000000; i++))

do

  if [[ $(cat $file.less) != $(cat new_$file.less) ]]
    then
      cat $file.less > new_$file.less
      lessc new_$file.less $file.css
  fi

  sleep 1

done